
<link type="text/css" href='http://sailsjs.org/styles/fonts.css' rel='stylesheet'/>

<body ng-controller='DeviceController' ng-init='init()'>


    <!-- EACH DEVICE -->
    <a href='#' class='device_box'>
        <div class='row'>
            <div class="col-xs-5 col-md-3">
                <div class='icon'>
                    <img src='images/appliance.png'/>
                </div>
            </div>
            <div class="col-xs-7 col-md-9">
                <div class='row'>
                    <div class='device_content'>
                        <div class="col-xs-12 col-md-6">
                            <p class='device_name'>Room Appliance</p>
                        </div>
                        <div class="col-xs-4 col-md-2">
                            <p class='device_state'>ON</p>
                        </div>
                        <div class="col-xs-8 col-md-4">
                            <p class='device_info'>12.5 w</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </a>
    <!-- END EACH DEVICE-->

    <!-- ERASE ME-->
    <a class='device_box'>
        <div class='row'>
            <div class="col-xs-5 col-md-3">
                <div class='icon'>
                    <img class='unactive' src='images/appliance.png'/>
                </div>
            </div>
            <div class="col-xs-7 col-md-9">
                <div class='row'>
                    <div class='device_content'>
                    <div class="col-xs-12 col-md-6">
                        <p class='device_name'>Kitchen Appliance</p>
                    </div>
                    <div class="col-xs-4 col-md-2">
                        <p class='device_state'>OFF</p>
                    </div>
                    <div class="col-xs-8 col-md-4">
                        <p class='device_info'>0.5 w</p>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </a>
    <!-- END ERASE ME-->

</body>
